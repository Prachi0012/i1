<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckBoxActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="#C1AEFC"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Select Your Option:-"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbDancing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:checked="true"
            android:text="Dancing"
            android:textSize="@dimen/_20ssp" />

        <CheckBox
            android:id="@+id/cbSinging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:text="Singing"
            android:textSize="@dimen/_20ssp" />

        <CheckBox
            android:id="@+id/cbTravelling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:text="Travelling"
            android:textSize="@dimen/_20ssp" />

        <CheckBox
            android:id="@+id/cbReading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:text="Reading"
            android:textSize="@dimen/_20ssp" />

        <CheckBox
            android:id="@+id/cbOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:text="Other"
            android:textSize="@dimen/_20ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="#D09CFA"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Submit"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>